# OpenAI API Key for generating captions
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Meta/Facebook API credentials - COMPANY ACCOUNT
# Get from: https://developers.facebook.com
# These are used for posting to the company's Facebook Page & Instagram
META_PAGE_ACCESS_TOKEN=your_company_page_access_token_here
META_PAGE_ID=your_company_facebook_page_id_here
META_INSTAGRAM_ACCOUNT_ID=your_company_instagram_business_id_here

# Meta App Credentials - For Agent OAuth (Optional)
# Create app at: https://developers.facebook.com/apps
# Used for agents to connect their personal Facebook/Instagram accounts
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here

# Base URL for OAuth callbacks
# Development: http://localhost:3000
# Production: https://posts.oneluckywave.co.za
NEXT_PUBLIC_BASE_URL=https://posts.oneluckywave.co.za

# Database
DATABASE_URL="file:./production.db"
